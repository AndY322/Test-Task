@model QulixTet.Models.Company

@{
    ViewBag.Title = "Добавить компанию";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Company</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Наименование </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Размер компании </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CompanySize, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CompanySize, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Вид деятельности </label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.KindOfActivityId, ViewBag.KindOfActivities as SelectList)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Организационно-правовая форма </label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.LegalFormId, ViewBag.LegalForms as SelectList)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить компанию" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Отмена", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
